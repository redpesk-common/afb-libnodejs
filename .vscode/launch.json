    "version": "0.2.0",
    "configurations": [
        
        {
          // nodejs ../src/nodejs-binder.nodejs ../sample/
          "name": "simple-nodejs",
          "type": "cppdbg",
          "request": "launch",
          "program": "/usr/bin/node",
          "args": ["--trace-uncaught","./samples/simple-api.js"],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [{"name":"LD_LIBRARY_PATH", "value":"${workspaceFolder}/../afb-libglue/build/src:/usr/local/lib64:"}],
          "externalConsole": false,
          "MIMode": "gdb",
          "setupCommands": [
            {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
            }
          ],
          "miDebuggerPath": "/usr/bin/gdb"
        }, {
